---
title: Добавление клиента
auth: false
includePopups: true
---
extends shared/_layout
include ../components/mainHeader/_mainHeader
include ../components/mainFooter/_mainFooter

block content

  .page-main
    +mainHeader("Добавление клиента")

    form.main-body(action='/' data-type="add-client").js-validate-form
      .main-content.js-main-content-scroller
        fieldset._fieldset
          ._fields
            ._container.container
              ._inner
                legend._legend Данные клиента

                .content-form._form
                  .ui-group
                    label(for="organization") Название организации
                    input.ui-input(type='text' name="organization")#organization

                  .ui-row
                    .ui-col.is-6
                      .ui-group
                        label(for="name") Имя
                        input.ui-input(type='text' name='name')#name

                    .ui-col.is-6
                      .ui-group
                        label(for="surname") Фамилия
                        input.ui-input(type='text' name='surname')#surname

                  .ui-group
                    label(for="position") Должность
                    input.ui-input(type='text' name="position")#position

                  .ui-group
                    label(for="email") Email
                      i.required *
                    input.ui-input(type='email' name="email" required)#email

        fieldset._fieldset
          ._fields
            ._container.container
              ._inner
                legend._legend Информация о проекте

                .content-form._form
                  .ui-group
                    label(for="projectName") Название проекта
                      i.required *
                    input.ui-input(type='text' name="projectName" required)#projectName

                  .ui-group
                    label(for="projectDescription") Описание
                    textarea.ui-input.js-autosize(rows='6' name="projectDescription")#projectDescription

                  .ui-group
                    label(for="projectType") Тип анкеты
                      i.required *
                    select.ui-input.js-select(name="projectType" required)#projectType
                      option Выберите из списка
                      option(value='0') Тип 1
                      option(value='1') Тип 2
                      option(value='2') Тип 3
                      option(value='3') Тип 4
                      option(value='4') Тип 5

      +mainFooter("Сохранить")
